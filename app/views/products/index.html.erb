<div  class="text-right">
  <%= form_with url: search_products_path,method: :post, class:"form-inline margin_space_top" do |form| %>
    <div class="input-group">
      <div class="col-sm-3 my-1">
        <%= form.search_field :title_search, class:"form-control", oninput: "this.form.requestSubmit()" %>
      </div>
      <div class="btn-toolbar" style="padding-left: 15px">
        <%= form.submit 'DESC', name: "sort",  class:"btn btn-dark margin_space",oninput: "this.form.requestSubmit()" %>
        <%= form.submit 'ASC', name: "sort", class:"btn btn-dark", oninput: "this.form.requestSubmit()" %>
      </div>
    </div>
  <% end %>
</div>

<%= render partial: 'partials/card_product',  locals: {products: @products} %>


<%= javascript_importmap_tags %>